// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// modelo de dados do usuario
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  readingPlans ReadingPlan[]
}
//Planos de leitura
model ReadingPlan {
  id             String    @id @default(cuid())
  planName       String    @default("Meu Plano de Leitura")
  chaptersPerDay Int
  totalDays      Int
  //progresso
  progress       Int       @default(0) // Começa com 0 capítulos lidos
  isCompleted    Boolean   @default(false) // Começa como não concluído
  lastReadAt     DateTime? // '?' torna o campo opcional, pois no início não há leitura
  
  // Relação com o Usuário
  user           User      @relation(fields: [userId], references: [id])
  userId         String

  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
}